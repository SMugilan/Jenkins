pipeline {
    agent any

    tools {
        maven 'MAVEN3'
        jdk 'OracleJDK17'
    }

    environment {
        JAVA_HOME = tool 'OracleJDK17'
        PATH = "${JAVA_HOME}/bin:${PATH}"
    }

    stages {
        stage('Fetch Code'){
            steps {
                git branch: 'vp-rem', url: 'https://github.com/infratute/devops-repo-all.git' 
            }
        }

        stage('Build') {
            steps {
                sh 'mvn install -DskipTests'
            }
            post{
                success {
                    echo "Now Archiving"
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }

        stage('UNIT TEST') {
            steps {
                // Run only tests that work on Java 17
                sh 'mvn test -Dtest=RoleTest,UserTest,SampleTest'
            }
        }
    }
}
